<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewHeads"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/heads"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_below="@id/imageViewHeads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFej"
            android:layout_width="200sp"
            android:layout_height="65sp"
            android:layout_centerHorizontal="true"
            android:text="FEJ"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonIras"
            android:layout_width="200sp"
            android:layout_height="65sp"
            android:layout_centerHorizontal="true"
            android:text="ÍRÁS"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewDobasok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:text="Dobások: 0 "
        android:textAlignment="textStart"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewGyozelem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDobasok"
        android:text="Győzelem: 0 "
        android:textAlignment="textStart"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewVereseg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGyozelem"
        android:text="Vereség: 0 "
        android:textAlignment="textStart"
        android:textSize="25sp" />

</RelativeLayout>